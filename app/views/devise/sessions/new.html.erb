<div class="body-flex">
  <div class="left-login">
    <%= image_tag "backgroundLogin.png", alt: "background", class: "login-img" %>
  </div>
  <div class="right-login">
    <%= button_to root_path, class: 'btn-home act' do %>
      <%= image_tag "arrowleft.png", alt: "arrow-left", class: "icone" %>
      Back to Home
    <% end %>
    <div class="container-input">
      <h2>Sign In</h2>
      <p class="text-title">Transform your financial future,</br> log in now.</p>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="container-label">
          <p class="label">Email</p>
          <div class="field input-container">
            <%= image_tag "user.png", alt: "user", class: "icone-input" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>

        <div class="container-label">
          <p class="label">Password</p>
          <div class="field input-container">
            <%= image_tag "lock.png", alt: "lock", class: "icone-input" %>
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
        </div>

        <%= button_tag type: "submit", class: "btn-login" do %>
          <p class="label-btn">Connect</p>
          <%= image_tag "arrowright.png", alt: "right", class: "arrow-btn-icon" %>
        <% end %>

        <% if devise_mapping.rememberable? %>
          <div class="field remember">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      <% end %>

      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forgot-link" %><br />
      <% end %>

      <p class="link-to-sign">New here?
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Create an account", new_registration_path(resource_name), class: "link-new" %><br />
        <% end %>
      </p>
    </div>
  </div>
</div>
